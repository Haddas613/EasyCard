@using Shared.Helpers
@{
    ViewData["Title"] = "Home Page";
}
@model ChargeViewModel

<div class="text-center">


    <partial name="_ValidationSummary" />

    <div class="row">


        <div class="col-sm-6">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <h3 class="panel-title">Charge</h3>
                    <p>@Model.Description</p>
                    <h3 class="panel-title">Amount: @Model.Amount.ToString("F2")@Model.Currency.GetCurrencySymbol()</h3>
                </div>

                <div class="panel-body">

                    <form asp-action="Charge" method="post">
                        <input type="hidden" asp-for="RedirectUrl" />
                        <input type="hidden" asp-for="PaymentRequest" />
                        <input type="hidden" asp-for="ApiKey" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="CardNumber">Card Number</label>
                                <input type="number" class="form-control" placeholder="Card Number" asp-for="CardNumber" autofocus autocomplete="off">
                                <span asp-validation-for="CardNumber"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CardExpiration.Year">Year</label>
                                <input type="number" class="form-control" placeholder="Year" asp-for="CardExpiration.Year" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="CardExpiration.Month">Month</label>
                                <input type="month" class="form-control" placeholder="Month" asp-for="CardExpiration.Month" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Cvv">Cvv</label>
                                <input type="number" class="form-control" placeholder="Cvv" asp-for="Cvv" autocomplete="off">
                            </div>

                            <div class="form-group">
                                <label asp-for="Name">Card Owner Name</label>
                                <input class="form-control" placeholder="Card Owner Name" asp-for="Name" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="NationalID">National ID</label>
                                <input type="number" class="form-control" placeholder="National ID" asp-for="NationalID" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone">Phone</label>
                                <input type="number" class="form-control" placeholder="Phone" asp-for="Phone" autocomplete="off">
                            </div>


                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" name="submit" value="Pay with EasyCard" />
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
