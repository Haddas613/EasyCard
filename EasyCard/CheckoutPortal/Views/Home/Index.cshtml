@using Shared.Helpers
@{
    ViewData["Title"] = "Home Page";
}
@model ChargeViewModel


<form asp-action="CancelPayment" method="post" hidden id="cancel-form">
    <input type="hidden" asp-for="RedirectUrl" />
    <input type="hidden" asp-for="PaymentRequest" />
    <input type="hidden" asp-for="ApiKey" />
    <input type="hidden" asp-for="Currency" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="ConsumerID" />
</form>


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="panel panel-default">

            <partial name="_ValidationSummary" />

            <div class="panel-heading">
                <p class="px-2">@Model.Description</p>
                @if (Model.Amount.GetValueOrDefault() > 0)
                {
                    <h3 class="panel-title text-center">Amount: @Model.Amount.GetValueOrDefault().ToString("F2")@Model.Currency.GetCurrencySymbol()</h3>
                }
            </div>


            <div class="panel-body">

                <form asp-action="Charge" method="post" id="checkout-form">
                    <input type="hidden" asp-for="RedirectUrl" />
                    <input type="hidden" asp-for="PaymentRequest" />
                    <input type="hidden" asp-for="ApiKey" />
                    <input type="hidden" asp-for="Currency" />
                    <input type="hidden" asp-for="Description" />
                    <input type="hidden" asp-for="ConsumerID" />
                    <input type="hidden" asp-for="IssueInvoice" />
                    @if (Model.Amount.GetValueOrDefault() > 0)
                    {
                        <input type="hidden" asp-for="Amount" />
                    }

                    @if (!(Model.Amount.GetValueOrDefault() > 0) || Model.SavedTokens?.Count() > 0)
                    {
                        <fieldset class="border rounded p-2 m-2">
                            @if (!(Model.Amount.GetValueOrDefault() > 0))
                            {
                                <div class="form-group row">
                                    <label asp-for="Amount" class="col-sm-3 col-form-label col-form-label-sm">Amount (@Model.Currency.GetCurrencySymbol())</label>
                                    <div class="col-sm-9">
                                        <input type="tel" class="form-control form-control-sm" placeholder="Amount" asp-for="Amount" autocomplete="off">
                                        <span asp-validation-for="Amount"></span>
                                    </div>
                                </div>
                            }
                            @if (Model.SavedTokens?.Count() > 0)
                            {
                                <div class="form-group row">
                                    <label asp-for="CreditCardToken" class="col-sm-3 col-form-label col-form-label-sm">Use saved card</label>
                                    <div class="col-sm-9">

                                        <div class="form-check">
                                            @foreach (var savedToken in Model.SavedTokens)
                                            {
                                                <input class="form-check-input" type="radio" asp-for="CreditCardToken" value="@savedToken.Key" />@savedToken.Value<br />
                                            }
                                            <input class="form-check-input" type="radio" asp-for="CreditCardToken" value="@(null)" checked />Enter new card<br />
                                        </div>

                                    </div>
                                </div>
                            }
                        </fieldset>
                    }
                    <fieldset class="border rounded p-2 m-2" id="card-info-group-area">
                        <div class="form-group row">
                            <label asp-for="CardNumber" class="col-sm-3 col-form-label col-form-label-sm">Card Number</label>
                            <div class="col-sm-9">
                                <input id="cc-number" type="tel" class="form-control cc-number form-control-sm" asp-for="CardNumber" autofocus autocomplete="cc-number" placeholder="•••• •••• •••• ••••">
                                <span asp-validation-for="CardNumber"></span>
                                <span class="control-validation"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CardExpiration" class="col-sm-3 col-form-label col-form-label-sm">Expiration</label>
                            <div class="col-sm-9">
                                <input id="cc-exp" type="tel" class="form-control cc-exp form-control-sm" placeholder="••/••" asp-for="CardExpiration" autocomplete="cc-exp">
                                <span asp-validation-for="CardExpiration"></span>
                                <span class="control-validation"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Cvv" class="col-sm-3 col-form-label col-form-label-sm">Cvv</label>
                            <div class="col-sm-9">
                                <input type="tel" class="form-control cc-cvc form-control-sm" placeholder="•••" asp-for="Cvv" autocomplete="off">
                                <span asp-validation-for="Cvv"></span>
                                <span class="control-validation"></span>
                            </div>
                        </div>

                        @if (Model.ConsumerID.HasValue)
                        {
                            <div class="form-group row">
                                <label class="fcol-form-label col-form-label-sm col-sm-3" asp-for="SaveCreditCard">Save Card</label>
                                <div class="col-sm-9">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="SaveCreditCard">
                                    </div>
                                </div>
                            </div>
                        }
                    </fieldset>
                    <fieldset class="border rounded p-2 m-2">
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 col-form-label col-form-label-sm">Card Owner Name</label>
                            <div class="col-sm-9">
                                <input class="form-control form-control-sm" placeholder="Card Owner Name" asp-for="Name" autocomplete="off">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-3 col-form-label col-form-label-sm">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control form-control-sm" placeholder="Email" asp-for="Email" autocomplete="off">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NationalID" class="col-sm-3 col-form-label col-form-label-sm">National ID</label>
                            <div class="col-sm-9">
                                <input type="tel" class="form-control form-control-sm" placeholder="National ID" asp-for="NationalID" autocomplete="off">
                                <span asp-validation-for="NationalID"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Phone" class="col-sm-3 col-form-label col-form-label-sm">Phone</label>
                            <div class="col-sm-9">
                                <input type="tel" class="form-control form-control-sm" placeholder="Phone" asp-for="Phone" autocomplete="off">
                                <span asp-validation-for="Phone"></span>
                            </div>
                        </div>

                    </fieldset>

                    <div class="form-group row text-center">
                        <div class="col-sm-4">
                            <button class="mt-2 btn btn-outline-danger" id="cancel-btn">
                                Cancel Payment
                            </button>
                        </div>
                        <div class="col-sm-8">
                            <input type=image src="~/img/pay-with-easycard.png" alt="Pay with EasyCard">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $('input[name="CreditCardToken"]').on('change', function (e) {
            if (e.target.value == "@(Guid.Empty)") {
                $("#card-info-group-area").attr("hidden", false);
            } else {
                $("#card-info-group-area").attr("hidden", true);
            }
        });

        $("#cancel-btn").on('click', function (e) {
            e.preventDefault();
            $('#cancel-form').submit();
        });

        $("#checkout-form").on("submit", function (e) {
            let ccvaltrim = $("#cc-number").val().replace(/ /g, '');
            $("#cc-number").val(ccvaltrim);
        })
    </script>
}
