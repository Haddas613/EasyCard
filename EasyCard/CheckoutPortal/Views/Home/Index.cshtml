@using Shared.Helpers
@{
    ViewData["Title"] = "Home Page";
}
@model ChargeViewModel

<div class="text-center">


    <partial name="_ValidationSummary" />

    <div class="row">


        <div class="col-sm-6">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <h3 class="panel-title">@Model.MarketingName</h3>
                    <p>@Model.Description</p>
                    <h3 class="panel-title">Amount: @Model.Amount.ToString("F2")@Model.Currency.GetCurrencySymbol()</h3>
                </div>

                <div class="panel-body">

                    <form asp-action="Charge" method="post">
                        <input type="hidden" asp-for="RedirectUrl" />
                        <input type="hidden" asp-for="PaymentRequest" />
                        <input type="hidden" asp-for="ApiKey" />
                        <input type="hidden" asp-for="Currency" />
                        <input type="hidden" asp-for="Amount" />
                        <input type="hidden" asp-for="Description" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="CardNumber">Card Number<small class="text-muted">[<span class="cc-brand"></span>]</small></label>
                                <input id="cc-number" type="tel" class="form-control cc-number" asp-for="CardNumber" autofocus autocomplete="cc-number" placeholder="•••• •••• •••• ••••">
                                <span asp-validation-for="CardNumber"></span>
                                <span class="control-validation"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CardExpiration">Expiration</label>
                                <input id="cc-exp" type="tel" class="form-control cc-exp" placeholder="••/••" asp-for="CardExpiration" autocomplete="cc-exp">
                                <span asp-validation-for="CardExpiration"></span>
                                <span class="control-validation"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Cvv">Cvv</label>
                                <input type="tel" class="form-control cc-cvc" placeholder="•••" asp-for="Cvv" autocomplete="off">
                                <span asp-validation-for="Cvv"></span>
                                <span class="control-validation"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Name">Card Owner Name</label>
                                <input class="form-control" placeholder="Card Owner Name" asp-for="Name" autocomplete="off">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NationalID">National ID</label>
                                <input type="tel" class="form-control" placeholder="National ID" asp-for="NationalID" autocomplete="off">
                                <span asp-validation-for="NationalID"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone">Phone</label>
                                <input type="tel" class="form-control" placeholder="Phone" asp-for="Phone" autocomplete="off">
                                <span asp-validation-for="Phone"></span>
                            </div>


                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" name="submit" value="Pay with EasyCard" />
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
