@model ForceUpdatePasswordViewModel
@inject CommonLocalizationService localizer

@{
    ViewData["Title"] = localizer.Get("SetNewPassword");
    var returnUrl = Model?.ReturnUrl ?? ViewData["ReturnUrl"] as string;
}

<div class="row">
    <div class="col-sm-12 d-md-flex justify-content-center">
        <div class="panel panel-default panel-ecng">
            <div class="panel-heading text-center">
                <h5 class="panel-title">@ViewData["Title"]</h5>
                <p>@localizer.Get("ForceUpdatePasswordMessage")</p>
            </div>
            <div class="panel-body">
                <form method="post">
                    @*@if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="text-danger"></div>
                    }*@
                    <input asp-for="ReturnUrl" type="hidden" value="@(returnUrl)"/>
                    <div class="form-group">
                        <label asp-for="NewPassword">@localizer.Get("Password")</label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">@localizer.Get("OK")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
