@model LoginWith2faTypeModel
@inject CommonLocalizationService localizer

@{
    ViewData["Title"] = localizer.Get("TwoFactorAuthChooseType");
}

<div class="row">
    <div class="col-md-12 d-flex justify-content-center">
        <div class="panel panel-default panel-ecng">
            <div class="panel-header text-center">
                <h2>@ViewData["Title"]</h2>
                <p>@localizer.Get("TwoFactorAuthChooseTypeMessage")</p>
            </div>
            <div class="panel-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }
                <form method="post">
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="LoginType" value="@TwoFactorAuthTypeEnum.Email" checked />@localizer.Get("Email")<br />
                            @if (ViewBag.HasPhone)
                            {
                                <input class="form-check-input" type="radio" asp-for="LoginType" value="@TwoFactorAuthTypeEnum.SMS" /> @localizer.Get("SMS") <br />
                            }
                            else
                            {
                                <input class="form-check-input" type="radio" asp-for="LoginType" value="@TwoFactorAuthTypeEnum.SMS" disabled /> @localizer.Get("SMS")
                                <p class="text-muted">
                                    <small>@localizer.Get("YouDontHavePhoneLinkedToThisAccount")</small>
                                </p>
                            }
                        </div>
                        <span asp-validation-for="LoginType" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">@localizer.Get("Login")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
