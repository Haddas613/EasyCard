@model LoginWith2faTypeModel
@{
    ViewData["Title"] = "2FA Choose type";
}

    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            <div class="panel panel-default panel-ecng">
                <div class="panel-header text-center">
                    <h2>@ViewData["Title"]</h2>
                    <p>Your login is protected with an authenticator app. Please choose type of authentication you want to use</p>
                </div>
                <div class="panel-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    <form method="post">
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="LoginType" value="@TwoFactorAuthTypeEnum.Email" checked />Email<br />
                                <input class="form-check-input" type="radio" asp-for="LoginType" value="@TwoFactorAuthTypeEnum.SMS" />SMS<br />
                            </div>
                            <span asp-validation-for="LoginType" class="text-danger"></span>
                        </div>
                        <div class="form-group text-end">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
