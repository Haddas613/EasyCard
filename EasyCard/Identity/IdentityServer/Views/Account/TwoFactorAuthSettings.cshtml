@model IdentityServer.Models.TwoFactorAuthSettingsViewModel

@{
    ViewData["Title"] = "Two Factor Auth Settings";
}

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h5 class="panel-title">@ViewData["Title"]</h5>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 d-flex  justify-content-center">
                <form asp-action="TwoFactorAuthSettings" class="panel-ecng">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TwoFactorAuthType" class="control-label"></label>
                        <select class="form-control" disabled>
                            <option value="@TwoFactorAuthTypeEnum.Email">Email</option>
                            <option value="@TwoFactorAuthTypeEnum.SMS">SMS</option>
                        </select>
                        <span asp-validation-for="TwoFactorAuthType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <p>Code will be sent to @Model.UserInfo.Email</p>
                    </div>

                    <div class="form-group text-end">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>