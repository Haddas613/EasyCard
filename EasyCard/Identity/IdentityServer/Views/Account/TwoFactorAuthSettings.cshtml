@model IdentityServer.Models.TwoFactorAuthSettingsViewModel
@inject CommonLocalizationService localizer

@{
    ViewData["Title"] = localizer.Get("TwoFactorAuthSettings");
}

<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h5 class="panel-title">@ViewData["Title"]</h5>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 d-flex  justify-content-center">
                <form asp-action="TwoFactorAuthSettings" class="panel-ecng">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TwoFactorAuthType" class="control-label">@localizer.Get("TwoFactorAuthType")</label>
                        <select class="form-control" disabled>
                            <option value="@TwoFactorAuthTypeEnum.Email">@localizer.Get("Email")</option>
                            <option value="@TwoFactorAuthTypeEnum.SMS">@localizer.Get("SMS")</option>
                        </select>
                        <span asp-validation-for="TwoFactorAuthType" class="text-danger"></span>
                    </div>

                    @*<div class="form-group">
                        <p>Code will be sent to @Model.UserInfo.Email</p>
                    </div>*@

                    <div class="form-group text-end">
                        <input type="submit" value="@localizer.Get("Save")" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>