@using Shared.Helpers
@inject CommonLocalizationService localizer

@{
    ViewData["Title"] = localizer.Get("Register");
}
@model RegisterViewModel

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">

            <partial name="_ValidationSummary" />

            <div class="panel-heading">
                <h3 class="panel-title">@localizer.Get("JoinEasyCard")</h3>
            </div>

            <div class="panel-body">
                <form asp-action="Register" method="post">
                    <fieldset name="user-data">
                        <div class="row">
                            <div class="col-md-3 col-xs-12 form-group">
                                <label asp-for="FirstName">@localizer.Get("FirstName")</label>
                                <input type="text" class="form-control" asp-for="FirstName" autocomplete="off">
                                <span asp-validation-for="FirstName"></span>
                            </div>

                            <div class="col-md-3 col-xs-12 form-group">
                                <label asp-for="LastName">@localizer.Get("LastName")</label>
                                <input type="text" class="form-control" asp-for="LastName" autocomplete="off">
                                <span asp-validation-for="LastName"></span>
                            </div>

                            <div class="col-md-6 col-xs-12 form-group">
                                <label asp-for="BusinessName">@localizer.Get("BusinessName")</label>
                                <input id="business-name" type="text" class="form-control" asp-for="BusinessName" autocomplete="off">
                                <span asp-validation-for="BusinessName"></span>
                            </div>

                            <div class="col-md-6 col-xs-12 form-group">
                                <label asp-for="PhoneNumber">@localizer.Get("Phone")</label>
                                <input type="tel" class="form-control" asp-for="PhoneNumber" autocomplete="off">
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>

                            <div class="col-md-6 col-xs-12 form-group">
                                <label asp-for="Email">@localizer.Get("Email")</label>
                                <input type="email" class="form-control" asp-for="Email" autocomplete="email">
                                <span asp-validation-for="Email"></span>
                            </div>

                            <div class="col-md-12 col-xs-12 form-group text-end">
                                <button id="submit-btn" data-sending="false" class="btn btn-primary">@localizer.Get("Submit")</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

</div>





@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/safe-form.js"></script>
}
